<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Send debug messages to System.out -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- By default, encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder -->
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %class{0}.%M %L - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.accounts" level="INFO" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>

    <logger name="io.github.crabzilla" level="INFO" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>

    <logger name="io.github.crabzilla.pjc" level="INFO" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>

    <logger name="io.github.crabzilla.web" level="INFO" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>